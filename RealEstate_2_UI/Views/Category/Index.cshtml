@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<!-- Kategori Sayfası -->
 <div class="container-fluid pt-4 px-4">
      <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Responsive Table</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kategori Adı</th>
                                <th scope="col">Kategori Durumu</th>
                                <th scope="col">Kategori Sil</th>
                                <th scope="col">Kategori Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.CategoryID</th>
                                    <td>@item.CategoryName</td>
                                    <td>@item.CategoryStatus</td>
                                    <td><a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Kategori Sil</a></td>
                                    <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning">Kategori Güncelle</a></td>
                                </tr>
                            }
                           
                        </tbody>
                    </table>
                    <a href="/Category/CreateCategory" class="btn btn-outline-success">Kategori Ekle</a>
                </div>
            </div>
        </div>
    </div>
</div>